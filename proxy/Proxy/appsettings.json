{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "Client": {
        "Destinations": {
          "ClientDestination": {
            "Address": "http://127.0.0.1:4666"
          }
        }
      },
      "Server": {
        "Destinations": {
          "ServerDestination": {
            "Address": "http://127.0.0.1:8080"
          }
        }
      }
    },
    "Routes": [
      {
        "RouteId": "ClientRoute",
        "ClusterId": "Client",
        "Match": {
          "Path": "{**clientPath}"
        }
      },
      {
        "RouteId": "ServerRoute",
        "ClusterId": "Server",
        "Match": {
          "Path": "/api/{**serverPath}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      }
    ]
  }
}
