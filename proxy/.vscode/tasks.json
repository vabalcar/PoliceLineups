{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install proxy",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Update proxy",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "update.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Compile proxy",
      "dependsOn": ["Install proxy"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "compile.ps1", "-Debug"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Generate certificate",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "generate-certificate.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Build proxy",
      "dependsOn": ["Compile proxy", "Generate certificate"],
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Clean proxy",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "clean.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Rebuild proxy",
      "dependsOn": ["Clean proxy", "Build proxy"],
      "dependsOrder": "sequence",
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Test proxy configuration",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "test-configuration.ps1", "-Debug"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    }
  ]
}
