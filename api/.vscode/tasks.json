{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install API dependencies",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "install.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Generate server API",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}\\..\\server"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "generate-api.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Generate client API",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}\\..\\client"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "generate-api.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Generate API",
            "dependsOn": [
                "Generate server API",
                "Generate client API"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}