{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "minLength": 1
    },
    "httpPort": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "httpsPort": {
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "serverBasePath": {
      "type": "string"
    }
  },
  "required": ["host", "httpPort", "httpsPort", "serverBasePath"]
}
