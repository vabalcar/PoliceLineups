{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Initialize VS Code settings",
      "type": "shell",
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "initialize-vs-code-settings.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Initialize configuration",
      "type": "shell",
      "linux": {
        "options": {
          "cwd": "${workspaceFolder}/config"
        }
      },
      "windows": {
        "options": {
          "cwd": "${workspaceFolder}\\config"
        }
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "initialize.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Deploy",
      "type": "shell",
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "deploy.ps1", "-Debug"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    }
  ]
}
