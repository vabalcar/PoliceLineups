    "version": "2.0.0",
    "tasks": [
        {
            "label": "Validate PDF/A-2u",
            "type": "shell",
            "command": "echo",
            "args": [
                "Apologies, but it's currently Windows-only"
            ],
            "windows": {
                "command": "${env:VERA_PDF_HOME}\\verapdf.bat",
                "args": [
                    "-f",
                    "2u",
                    "--format",
                    "text",
                    "${file}"
                ]
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "echo": false
            }
        },
        {
            "label": "Validate PDF/A-2u and generate XML report",
            "type": "shell",
            "command": "echo",
            "args": [
                "Apologies, but it's currently Windows-only"
            ],
            "windows": {
                "command": "${env:VERA_PDF_HOME}\\verapdf.bat",
                "args": [
                    "-f",
                    "2u",
                    "--format",
                    "mrr",
                    "${file}"
                ]
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "echo": false
            }
        },
        {
            "label": "Install API dependencies",
