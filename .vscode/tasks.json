    "version": "2.0.0",
    "tasks": [
        {
            "label": "validate",
            "type": "shell",
            "command": "echo",
            "args": [
                "Apologies, but it's currently Windows-only"
            ],
            "windows": {
                "command": "${env:VERA_PDF_HOME}\\verapdf.bat",
                "args": [
                    "-f",
                    "2u",
                    "--format",
                    "text",
                    "${file}"
                ]
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        
        {
            "label": "validate with XML report",
            "type": "shell",
            "command": "echo",
            "args": [
                "Apologies, but it's currently Windows-only"
            ],
            "windows": {
                "command": "${env:VERA_PDF_HOME}\\verapdf.bat",
                "args": [
                    "-f",
                    "2u",
                    "--format",
                    "mrr",
                    "${file}"
                ]
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}