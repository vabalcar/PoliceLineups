{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check environment",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}\\environment"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "check-environment.ps1"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Install API",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}\\api"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Generate code",
      "dependsOn": ["Install API"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "generate-code.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Install everything",
      "dependsOn": ["Generate code"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Run everything",
      "dependsOn": ["Install everything"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run.ps1"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    }
  ]
}
