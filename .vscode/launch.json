    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            "name": "Debug server",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}\\code\\server",
            //"pythonPath": "${workspaceFolder}\\code\\server\\server-env\\bin\\python",
            "windows": {
                "pythonPath": "${workspaceFolder}\\code\\server\\server-env\\Scripts\\python.exe"
            },
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_RUN_PORT": 6666
            },
            "args": [
                "run"
            ]
        }
    ]
}