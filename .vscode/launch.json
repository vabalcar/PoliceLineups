    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current PowerShell script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        },
        {
            // Client must be already launched when debugging an angular script
            "name": "Debug client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4666",
            "webRoot": "${workspaceFolder}\\code\\client"
        },
        {
            // Launches server
            "name": "Debug server",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}\\code\\server",
            "module": "swagger_server",
            "windows": {
                "pythonPath": "${workspaceFolder}\\code\\server\\server-env\\Scripts\\python.exe"
            },
            "env": {
                "FLASK_RUN_HOST": "localhost",
                "FLASK_RUN_PORT": 8080
            }
        }
    ]
}