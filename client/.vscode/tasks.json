{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate client code",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "generate-code.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Install client",
      "dependsOn": ["Generate client code"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Build client",
      "dependsOn": ["Install client"],
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Debug client",
      "isBackground": true,
      "dependsOn": ["Install client"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run.ps1", "-Debug"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      },
      "problemMatcher": {
        "pattern": "$tsc",
        "background": {
          "beginsPattern": {
            "regexp": "^.*$"
          },
          "endsPattern": {
            "regexp": "^.*Compiled successfully|Failed to compile.*$"
          }
        }
      }
    },
    {
      "label": "Clean client",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "clean.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Rebuild client",
      "dependsOn": ["Clean client", "Build client"],
      "dependsOrder": "sequence",
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Run client unit tests",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run-unit-tests.ps1", "-Debug"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    }
  ]
}
