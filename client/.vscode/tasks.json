{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate client code",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "generate-code.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install client dependencies",
            "dependsOn": [
                "Generate client code"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "install.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run client",
            "isBackground": true,
            "dependsOn": [
                "Install client dependencies"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "run.ps1",
                "-Dev"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "^.*$"
                    },
                    "endsPattern": {
                        "regexp": "^.*Compiled successfully|Failed to compile.*$"
                    }
                }
            }
        }
    ]
}