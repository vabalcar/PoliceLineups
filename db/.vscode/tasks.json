{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Dump DB",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "dump.ps1"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            }
        },
        {
            "label": "Install DB",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "install.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run DB",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "pwsh",
            "args": [
                "-NoLogo",
                "-File",
                "run.ps1"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "echo": false
            },
            "problemMatcher": []
        }
    ]
}