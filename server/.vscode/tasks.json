{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate server code",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "generate-code.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      },
      "problemMatcher": []
    },
    {
      "label": "Install server",
      "dependsOn": ["Generate server code"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      },
      "problemMatcher": []
    },
    {
      "label": "Prepare server debugging",
      "dependsOn": ["Install server"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run.ps1", "-Dev", "-NoRun"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run server",
      "dependsOn": ["Install server"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run.ps1", "-Dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      },
      "problemMatcher": []
    }
  ]
}
