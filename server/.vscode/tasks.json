{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate server code",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "generate-code.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Install server",
      "dependsOn": ["Generate server code"],
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "install.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Run DB",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "pwsh",
      "args": ["-NoLogo", "-File", "run-db.ps1"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "echo": false
      }
    },
    {
      "label": "Prepare server debugging",
      "dependsOn": ["Install server", "Run DB"],
      "group": "build",
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
