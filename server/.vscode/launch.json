    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "module": "swagger_server",
            "linux": {
                "python": "${workspaceFolder}/server-env/bin/python"
            },
            "windows": {
                "python": "${workspaceFolder}\\server-env-win\\Scripts\\python.exe"
            },
            "preLaunchTask": "Prepare server debugging"
        },
        {
            "name": "Debug current PowerShell script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        }
    ]
}