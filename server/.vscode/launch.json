    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/src",
            "module": "swagger_server",
            "linux": {
                "pythonPath": "${workspaceFolder}/server-env/bin/python"
            },
            "windows": {
                "pythonPath": "${workspaceFolder}\\server-env-win\\Scripts\\python.exe"
            },
            "env": {
                "FLASK_RUN_HOST": "localhost",
                "FLASK_RUN_PORT": "8080"
            },
            "preLaunchTask": "Install server dependencies"
        },
        {
            "name": "Debug current PowerShell script",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "args": [],
            "cwd": "${file}"
        }
    ]
}