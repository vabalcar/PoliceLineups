{
  "python.pythonPath": ".venv_linux/bin/python",
  "python.linting.pylintPath": ".venv_linux/bin/pylint",
  "python.linting.ignorePatterns": ["src/swagger_server/**/*.py"],
  "python.linting.pylintArgs": [
    "--disable=no-value-for-parameter",
    "--variable-rgx",
    "^[a-z][a-z0-9]*(_[a-z0-9]+)*$",
    "--argument-rgx",
    "^[a-z][a-z0-9]*(_[a-z0-9]+)*$",
    "--init-hook",
    "import sys; sys.path.append('src')"
  ]
}
